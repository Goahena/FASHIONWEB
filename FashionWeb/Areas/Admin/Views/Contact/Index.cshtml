@using FashionWeb.Utilities;
@using FashionWeb.Models;
@model IList<Contact>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <nav aria-label="breadcrumb">
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách liên hệ</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="col-1 text-center">#</th>
                                <th class="col-4 text-center">Tiêu đề</th>
                                <td class="col-2 text-center">Tên</td>
                                <td class="col-2 text-center">Số điện thoại</td>
                                <td class="col-1 text-center">Email</td>
                                <th class="col-2 text-center">Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                string url = Functions.TitleSlugGeneration("Contact", item.Title, item.ContactID);

                                <tr>
                                    <th class="text-center" scope="row">@item.ContactID</th>
                                    <td><a href="/@url" class="text-primary">@item.Title</a></td>
                                    <td class="text-center">@item.Name</td>
                                    <td class="text-center">@item.Phone</td>
                                    <td class="text-center">@item.Email</td>
                                    <td class="text-center">
                                    <td class="d-flex justify-content-evenly">
                                        <a href="mailto:@item.Email" class="btn btn-inverse-info btn-icon"><i class="mdi mdi-pencil"></i></a>
                                        <a asp-area="Admin" asp-controller="Contact" asp-action="Delete" asp-route-id="@item.ContactID" class="btn btn-inverse-danger btn-icon"><i class="mdi mdi-archive"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>     