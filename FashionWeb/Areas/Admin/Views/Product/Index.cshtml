@using FashionWeb.Models;
@model IList<Product>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
          <div class="content-wrapper">
            <div class="page-header">
              <nav aria-label="breadcrumb">
              </nav>
            </div>
            <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Danh sách sản phẩm</h4>
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th> # </th>
                          <th> Tên sản phẩm </th>
                          <th> Giá </th>
                          <th> Ngày đăng </th>
                          <th> Chức năng </th>
                        </tr>
                      </thead>
                      <tbody>
                      @foreach(var item in Model)
                      {
                        <tr>
                          <td> @item.ProductID </td>
                          <td> @item.ProductName </td>
                          <td> @item.Price </td>
                          <td> @item.CreatedDate.ToString() </td>
                          <td class="d-flex justify-content-evenly">
                            <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-inverse-info btn-icon"><i class="mdi mdi-pencil"></i></a>
                            <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-inverse-danger btn-icon"><i class="mdi mdi-archive"></i></a>
                          </td>
                        </tr>
                       }
                                
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>              
            </div>
          </div>     