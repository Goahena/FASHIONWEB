@using FashionWeb.Models;
@model IList<Category>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <div class="page-header">
        <nav aria-label="breadcrumb">
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách danh mục</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Tên danh mục </th>
                                <th> Thứ tự </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.CategoryID </td>
                                    <td> @item.CategoryName </td>
                                    <td> @item.MenuOrder </td>
                                    <td class="d-flex justify-content-evenly">
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryID" class="btn btn-inverse-info btn-icon"><i class="mdi mdi-pencil"></i></a>
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-inverse-danger btn-icon"><i class="mdi mdi-archive"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>     